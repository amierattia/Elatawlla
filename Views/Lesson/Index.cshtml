@model List<NetWork.Models.Lesson>

@{
    ViewData["Title"] = "Lessons List";
    @if (User.IsInRole("Admin") || User.IsInRole("Instructor") || User.IsInRole("Suber_Instructor"))
    {
        Layout = "_Layout";
    }
    else
    {
        Layout = "_AccountLayout";

    }
}

<div class="container mt-5">
    <h2 class="mb-4">Lessons List</h2>
    <div class="row">
        <div class="col-md-12">
            @if (User.IsInRole("Admin") || User.IsInRole("Instructor") || User.IsInRole("Suber_Instructor"))
            {
                <a asp-action="Add" class="btn btn-primary mb-3">Add New Lesson</a>

            }
            <div class="table-responsive">
                <table class="table table-striped table-bordered">
                    <thead class="thead-dark">
                    <tr>
                        <th class="text-center">ID</th>
                        <th class="text-center">Title</th>
                        <th class="text-center">Content</th>
                        <th class="text-center">Course</th>
                        @if (User.IsInRole("Admin") || User.IsInRole("Instructor") || User.IsInRole("Suber_Instructor"))
                        {
                            <th class="text-center">Actions</th>
                        }
                    </tr>

                    </thead>
                    <tbody>
                    @if (Model != null && Model.Any())
                    {
                        @foreach (var lesson in Model)
                        {
                            <tr>
                                <td class="text-center">@lesson.Id</td>
                                <td>@lesson.Title</td>
                                <td>
                                    <a asp-action="Paragraphs" asp-controller="Lesson" asp-route-lessonId="@lesson.Id" class="btn btn-info btn-sm">Content</a>
                                </td>
                                <td>@lesson.Course?.Title</td>
                                      @if (User.IsInRole("Admin") || User.IsInRole("Instructor") || User.IsInRole("Suber_Instructor"))
                                      {
                                            <td class="text-center">

                                                <a asp-action="Update" asp-route-lessonid="@lesson.Id" class="btn btn-warning btn-sm">
                                                    <i class="fas fa-edit"></i>
                                                </a>
                                                <a asp-action="Delete" asp-route-lessonid="@lesson.Id" class="btn btn-danger btn-sm">
                                                    <i class="fas fa-trash-alt"></i>
                                                </a>   
                                            </td>
                                      }
                            
                                </tr>

                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="5" class="text-center">No lessons available for this course.</td>
                        </tr>
                    }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>
}
